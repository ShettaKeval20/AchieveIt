<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/taskNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Name"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="25sp" />

            <TextView
                android:id="@+id/completeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Completed"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@color/successGreen"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskNameTextView"
            android:layout_marginTop="8dp"
            android:text="Description" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pieChartTextView"
            android:layout_marginTop="12dp"
            android:text="Date" />

        <TextView
            android:id="@+id/activeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionTextView"
            android:layout_marginTop="8dp"
            android:text="Active" />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activeTextView"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:text="Timer" />

        <TextView
            android:id="@+id/pieChartTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerTextView"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:text="Explode Piechart" />

        <TextView
            android:id="@+id/noteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pieChartTextView"
            android:layout_marginTop="8dp"
            android:text="Note" />



        <!-- Add any additional views or elements here based on your data from the database -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
